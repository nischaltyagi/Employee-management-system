extends ../basic/layout

block content
  div(style='background-image: linear-gradient(to right, #ffc3a0 0%, #ffafbd 100%);')
    form(action='/profile/update', method='POST')
      .form-row.ml-4
        .form-group.col-md-5.mt-3
          label.h2 Enter Employee Id to Update
          br
          label.h5 Employee ID
          input.form-control(type='text', placeholder='Enter ID', name='empId', required='')
      .form-row.ml-4
        .form-group.col-md-3
          label.h5(for='inputState') Field To Update
          select#inputState.form-control(name='choice')
            option(value='name')  Name
            option(value='designation')  Designation
            option(value='department')  Department
            option(value='contact')  Contact 
            option(value='address')  Address 
            option(value='address')  Basic 
      .form-row.ml-4
        .form-group.col-md-5
          input#validationTooltip03.form-control(type='text', placeholder='Enter Data', name='data', required='')
      .ml-4
        button.btn.btn-success(type='submit') Update
    hr.mt-4.mb-3.bg-dark
    form.mt-2.mb-3(action='/profile/remove', method='POST')
      .form-row.ml-4
        .form-group.col-md-5
          label.h2 Enter Employee Id to Remove
          br
          label.h5 Employee ID
          br
          label Think before removing
          input.form-control(type='text', placeholder='Enter ID', name='empId', required='')
      .ml-4
        button.btn.btn-success(type='submit') Remove
    hr.mt-4.mb-3.bg-dark
    form.mt-2(action='/profile/upload', method='post', enctype='multipart/form-data')
      .form-row.ml-4
        .form-group.col-md-5.mb-5
          label.h2 Upload files for address proof
          br
          label.h5 Employee ID
          input.form-control(type='text', name='empId')
          input(type='file', name='myImage')
          input.btn.btn-success(type='submit', value='Upload Photo')


